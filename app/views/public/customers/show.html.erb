<div class='container'>
  <h2 class="mt-5"><span class="ml-5 bg-light p-2">マイページ</span></h2>
  <h4 class="mt-5">登録情報   <%= link_to "編集する", customers_information_edit_path, class:"btn btn-success ml-3" %></h4>
  <div class='row pt-4'>
   <div class="col-md-7">

        <table class="table table-bordered border-info">
         <tr>
           <td class="table-secondary border-dark" style="width: 30%">氏名</td>
           <td class="border-dark"><%= @customer.last_name %> <%= @customer.first_name %></td>
         </tr>


         <tr>
           <td class="table-secondary border-dark">カナ</td>
           <td class="border-dark"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
         </tr>


         <tr>
           <td class="table-secondary border-dark">郵便番号</td>
           <td class="border-dark"><%= @customer.postal_code %></td>
         </tr>

         <tr>
           <td class="table-secondary border-dark">住所</td>
           <td class="border-dark"><%= @customer.address %></td>
         </tr>

         <tr>
           <td class="table-secondary border-dark">電話番号</td>
           <td class="border-dark"><%= @customer.telephone_number %></td>
         </tr>

         <tr>
           <td class="table-secondary border-dark">メールアドレス</td>
           <td class="border-dark"><%= @customer.email %></td>
         </tr>

        </table>
   </div>
  </div>


<div class="container mt-3">
<div class="container mt-3">
  <div class="row">
    <div class="col-12 col-md-6">
      <div class="d-flex align-items-center">
        <h4 class="mr-3 mb-4">配送先</h4>
        <div class="mb-4 ml-5">
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary", style: "width: 150px;" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-md-6">
      <div class="d-flex align-items-center">
        <h4 class="mr-3 mb-0">注文履歴</h4>
        <div class='ml-4'>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary", style: "width: 150px;" %>
        </div>
      </div>
    </div>
  </div>
</div>


</div>
