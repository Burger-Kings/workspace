<div class="genre_search">
  <table class="table custom_table">
    <tr>
      <th class='text-center'>ジャンル検索</th>
    </tr>

    <%= form_with url: search_items_path, method: :get do |f| %>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to search_items_path(genre_id: genre.id), method: :get, class: 'btn btn-light' do %>
              <%= genre.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>

  </table>
</div>
