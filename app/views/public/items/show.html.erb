<div class="container">
  <div class="row py-5">
<%= render 'public/homes/genre_table' %>

    <div class="col-12 col-md-10 mt-4 mx-auto">
      <div class="row">
        <div class="col-12 col-md-6">
          <div class="d-flex justify-content-center">
            <%= image_tag 'no-image.png' %>
          </div>
        </div>
        <div class="col-12 col-md-6 align-self-center">
          <h3 class="mb-3"><%= @item.name %></h3>
          <h5 class="mb-3"><%= @item.introduction %></h5>
          <h5 class="mb-3"><%= @item.price %></h5>
          <div class="d-flex align-items-center">
            <%= form.with model: cart_item local: true do |f| %>
              <%= f.hidden_field :item_id, :value => @item_id %>
              <%= f.number_field :amount, placeholder: "個数選択" %>
              <%= f.submit 'カートに入れる', class: 'btn btn-success' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
