<div class="container px-5 px-sm-0">
  <h3><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h3>
  <div class="row my-5">
    <div class="col-md-8 px-5 px-sm-0">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
            <%= form_with model: @customer, url: admin_customer_path(@customer.id), local: true do |f| %>
            <tr>
              <th>氏名</th>
              <td><%= f.text_field :last_name, class:"form-control" %></td>
              <td><%= f.text_field :first_name, class:"form-control" %></td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td><%= f.text_field :last_name_kana, class:"form-control" %></td>
              <td><%= f.text_field :first_name_kana, class:"form-control" %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= f.text_field :postal_code, class:"form-control" %></td>
              <td></td>
            </tr>
            <tr>
              <th>住所</th>
              <td colspan="2"><%= f.text_field :address, class:"form-control" %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= f.text_field :telephone_number, class:"form-control" %></td>
              <td></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.text_field :email, class:"form-control" %></td>
              <td></td>
            </tr>
            <tr>
              <th><%= f.label :is_active, "会員ステータス" %></th>
              <td>
                <%= f.radio_button :is_active, true %>
                <strong><%= f.label :is_active_true, "有効"%></strong>
                <%= "　　"%>
                <%= f.radio_button :is_active, false %>
                <strong style="color: gray;"><%= f.label :is_active, "退会"%></strong>
              </td>
            </tr>
            <tr>
              <th></th>
              <td>
                <%= f.submit '変更を保存', class: "btn btn-success" %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>