<div class="container">
  <div class="row py-5">
    <%= render 'public/items/genre_search' %>

    <div class="col-12 col-md-10 mt-4 mx-auto">
     <div class="row align-items-center">
      <div class="col-md-12 mb-3">
       <h2 class="ml-md-5"> <small>（全<%= @records.count %> 件）</small></h2>
      </div>
     </dv>

    <div class="container">
     <div class="row">
       
        <% if @records.empty? %>
         <div class="text-center" style="margin:30px;">
         <p style="color:red;">該当する商品はありません</p>
         </div>
        <% end %>
     
      <% @records.each do |item| %>
     　 <div class="col-md-3 col-sm-6 mb-4">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_item_image(300,300) ,class: "img-fluid" %>
            <% end %>
            <h5 class="mt-3"><%= item.name %></h5>
            <p><%= item.price %>円</p>
     　 </div>
      <% end %>
     </div>
    </div>
  </div>
 </div>
</div>