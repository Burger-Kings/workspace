<div class="container mt-5">
  <h4 class="ml-5">
    <span class="bg-light p-2">注文情報確認</span>
  </h4>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered mt-4">
        <thead>
          <tr>
            <th style="width: 40%;">商品名</th>
            <th style="width: 20%;">単価</th>
            <th style="width: 20%;">数量</th>
            <th style="width: 20%;">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items ||= [] %>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.get_item_image(100, 100) %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td><%= cart_item.amount %></td>
              <td>
                <%= cart_item.subtotal %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <table class="table table-bordered mt-4">
        <tbody>
          <tr>
            <th>送料</th>
            <% @order.shipping_fee = 800 %>
            <td style="width: 60%;"><%= @order.shipping_fee %></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <% total = 0 %>
            <% @cart_items.each do |cart_item| %>
              <% total += cart_item.subtotal %>
            <% end %>
            <td><%= total %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <% @order.total_price = @order.shipping_fee + total %>
            <td><%= @order.total_price %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <h5 class="mb-5 mt-2"><strong class="mr-3">支払方法</strong><%= @order.payment_method %></h5>
  <h5>
    <strong class="mr-3">お届け先</strong><%= @order.postal_code %><%= @order.address %><br>
    <%= @order.name  %>
  </h5>

  <div class="col-sm-3 mx-auto mt-5">
    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
      <%= f.hidden_field :customer_id %>
      <%= f.hidden_field :shipping_fee %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :total_price %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :status %>
      <div><%= f.submit '注文を確定する', class: 'btn btn-success btn-lg btn-block' %></div>
    <% end %>
  </div>
</div>
