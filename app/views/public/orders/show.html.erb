<div class="container mt-5">
<h4><span class="w-25 mt-5" style="background-color: #eee">注文履歴詳細 </span></h4>

 <div class="row mt-4">
     <div class="col-6">
        <p class="font-weight-bold">注文情報</p>
        <table class="table table-bordered">
            <tr>
                <td class="table-secondary w-25 border-dark">注文日</td>
                <td class="border-dark"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
                <td class="table-secondary border-dark">配送先</td>
                <td class="border-dark">〒<%= @order.postal_code %><br/> <%= @order.address %> <br/> <%= @order.name %> </td>
            </tr>
            <tr>
                <td class="table-secondary border-dark">支払い方法</td>
                <td class="border-dark"><%= @order.payment_method %></td>
            </tr>
            <tr>
                <td class="table-secondary border-dark">ステータス</td>
                <td class="border-dark"><%= @order.status %></td>
            </tr>
        </table>
     </div>
     
     <div class="col-3">
         <p class="font-weight-bold">請求情報</p>
         <table class="table table-bordered">
             <tr>
                 <td class="table-secondary border-dark">商品合計</td>
                   <% total = 0 %>
                    <% @order_items.each do |order_item| %>
                      <% total += (order_item.price * order_item.amount) %>
                    <% end %>
                 <td class="border-dark">
                   <%= total %>
                 </td>
             </tr>
             
             <tr>
                 <td class="table-secondary border-dark">配送料</td>
                 <td class="border-dark">
                    <%= @order.shipping_fee %></td>
             </tr>
             
             <tr>
                 <td class="table-secondary border-dark font-weight-bold">ご請求額</td>
                 <td class="border-dark"><%= (total + 800) %></td>
             </tr>
         </table>
     </div>
 </div>
 
 <div class="row">
     <div class="col-7">
          <p class="font-weight-bold mb-0">注文内容</p>
         　　<table class="table table-bordered">
             　<tr>
                 <td class="table-secondary border-dark font-weight-bold w-50">商品</td>
                 <td class="table-secondary border-dark font-weight-bold">単価(税込)</td>
                 <td class="table-secondary border-dark font-weight-bold">個数</td>
                 <td class="table-secondary border-dark font-weight-bold">小計</td>
            　 </tr>
            　 
            　 <% @order_items.each do |order_item| %>
            　 <tr>
            　   <td class="border-dark"><%= order_item.item.name %></td>
            　    <td class="border-dark"><%= order_item.price %></td>
            　    <td class="border-dark"><%= order_item.amount %></td>
            　    <td class="border-dark">
            　        <% subtotal = (order_item.price * order_item.amount).to_i %>
                     <%= subtotal %></td>
            　 </tr>
            　 <% end %>
         　　</table>
     </div>
 </div>
</div>