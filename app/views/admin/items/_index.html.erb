<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to edit_admin_item_path(item) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <% if item.is_sale == true %>
        <td><strong style="color: green;">販売中</strong></td>
      <% else %>
        <td><strong style="color: gray;">販売停止中</strong></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>