
<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg py-2">
        <div class="container">
          <a class="navbar-brand" href="/">
            <%= image_tag "logo.jpg",width: '120px', class: "img-fluid" %>
          </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">

          <% if admin_signed_in? %>
            <li class='nav-item'>
              <%= link_to '商品一覧', admin_items_path, class: 'btn btn-dark' %>
            </li>
            <li class='nav-item'>
              <%= link_to '会員一覧', admin_customers_path, class: 'btn btn-dark' %>
            </li>
            <li class='nav-item'>
              <%= link_to '注文履歴一覧', admin_path, class: 'btn btn-dark' %>
            </li>
            <li class='nav-item'>
              <%= link_to 'ジャンル一覧', admin_genres_path, class: 'btn btn-dark' %>
            </li>
            <li class='nav-item'>
              <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'btn btn-dark' %>
            </li>
            <%= render 'layouts/admin_search' %>

          <% elsif customer_signed_in? %>
          　<li class="text-white">ようこそ、<%= current_customer.last_name %>さん！</li>

            <li class="nav-item">
              <%= link_to 'マイページ', customers_mypage_path, class: 'btn btn-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to '商品一覧', items_path, class: "btn btn-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to 'カート', cart_items_path, class: "btn btn-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: "btn btn-dark mr-3" %>
            </li>
            <form class="form-inline">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-light" type="submit">Search</button>
            </form>

          <% else %>
            <li class="nav-item">
              <%= link_to 'About', about_path, class: "btn btn-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to '商品一覧', items_path, class: "btn btn-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to '新規登録', new_customer_registration_path, class: "btn btn-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログイン', new_customer_session_path, class: "btn btn-dark" %>
            </li>
            <form class="form-inline">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          <% end %>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

<footer class="fixed-bottom text-center">
  <div class="container">
    <p style="color: #aaa;">&copy; 2023 Nagano Cakes</p>
  </div>
</footer>
  </body>
</html>


