<div class="container px-5 px-sm-0">
  <div class="row my-4">
    <h2>商品新規登録</h2>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= form_with model: @item, url: admin_items_path do |f| %>
        <table class="table table-borderless table-sm">
          <tbody>
            <tr>
              <th><%= f.label :item_image, "商品画像" %></th>
              <td><%= f.file_field :item_image, accept: "image/jpeg" %></td>
            </tr>
            <tr>
              <th><%= f.label :name, "商品名" %></th>
              <td><%= f.text_field :name, :placeholder => "商品名", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :introduction, "商品説明" %></th>
              <td><%= f.text_area :introduction, rows: 7, :placeholder => "ここに説明を入力してください", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :genre_id, "ジャンル" %></th>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--",class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :price, "税抜価格" %></th>
              <td colspan="2"><%= f.number_field :price, :placeholder => "1000", class: "form-control" %></td>
              <td style="vertical-align: bottom;"><span>円</span></td>
            </tr>
            <tr>
              <th><%= f.label :is_sale, "販売ステータス" %></th>
              <td>
                <%= f.radio_button :is_sale, true %>
                <strong><%= f.label :is_sale_true, "販売中"%></strong>
                <%= "　 　"%>
                <%= f.radio_button :is_sale, false %>
                <strong style="color: gray;"><%= f.label :is_sale_false, "販売停止中"%></strong>
              </td>
            </tr>
            <tr>
              <th></th>
              <td><%= f.submit '新規登録',class:"btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>