<div class="container mt-5">
  <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
  <h5><strong>支払い方法</strong></h5>
    <div class="form-check ml-5">
      <%= f.radio_button :payment_method, :credit_card, class: 'form-check-input', id: 'credit_card' %>
      <%= f.label :payment_method_credit_card, 'クレジットカード', class: 'form-check-label', for: 'credit_card' %>
    </div>
    <div class="form-check ml-5 mt-2">
      <%= f.radio_button :payment_method, :bank_transfer, class: 'form-check-input', id: 'bank_transfer' %>
      <%= f.label :payment_method_bank_transfer, '銀行振込', class: 'form-check-input', for: 'bank_transfer' %>
    </div>


  <h5 class="mt-3"><strong>お届け先</strong></h5>
    <div class="form-check ml-5">
      <%= f.radio_button :address, 'address', checked: 'checked', class: 'form-check-input', name: 'address_option' %>
      <%= f.label :address, 'ご自身の住所', class: 'form-check-label', for: 'address_option' %>
    </div>
    <div class='row'>
      <div class='col'>
        <%= current_customer.postal_code %>
    </div>
      <div class='col'>
        <%= current_customer.address %>
      </div>
    </div>
    <div class='row'>
      <div class='col'>
        <%= current_customer.last_name %>
      </div>
      <div class='col'>
        <%= current_customer.first_name %>
      </div>
    </div>

    <div class="form-check ml-5 mt-2">
      <%= f.radio_button :address, 'registered_address', class: 'form-check-input', name: 'address_option' %>
      <%= f.label :address, '登録済住所から選択', class: 'form-check-label', for: 'address_option' %>
    </div>
    <div class='form-group'>
      <%= f.label :customer_id, @addresses, :id, :adresses, {include_blank: true }, class: 'form-control' %>
    </div>

    <div class="form-check ml-5 mb-3">
      <%= f.radio_button :address, 'new_address', class: 'form-check-input', name: 'address_option' %>
      <%= f.label :address, '新しいお届け先', class: 'form-check-label', for: 'address_option' %>
    </div>
  <div class="ml-5">
    <div class="form-group row">
      <label for='postal_code' class="col-6 col-md-3 ml-md-4">郵便番号（ハイフンなし）</label>
      <div class="col-6 col-md-3">
        <%= f.text_field :postal_code, id: 'postal_code', class: 'form-control', placeholder: '0000000' %>
      </div>
    </div>
  </div>

  <div class="ml-5">
    <div class="form-group row">
      <label for='address' class="col-6 col-md-3 ml-md-4">住所</label>
      <div class="col-6 col-md-7">
        <%= f.text_field :address, id: 'address', class: 'form-control', placeholder: '東京都千代田区千代田1-1' %>
      </div>
    </div>
  </div>


  <div class="ml-5">
    <div class="form-group row">
      <label for='name' class="col-6 col-md-3 ml-md-4">宛名</label>
      <div class="col-6 col-md-3">
        <%= f.text_field :name, id: 'name', class: 'form-control', placeholder: '令和道子' %>
      </div>
    </div>
  </div>

<div class="col-sm-3 mx-auto mt-2">
  <div><%= f.submit '確認画面に進む', class: 'btn btn-primary' %></div>
</div>
<% end %>
</div>
