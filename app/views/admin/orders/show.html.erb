<div class="container px-5 px-sm-0">
  <div class="row my-4">
    <h3>注文履歴詳細</h3>
  </div>
  <div class="row">
    <div class="col-md-10 col-lg-8 px-5 px-sm-0">
      <%= render "admin/shared/error_messages", resource: @order %>
      <table class="table table-sm table-borderless">
        <tbody>
          <tr>
            <th>購入者</th>
            <td>
              <%= link_to admin_customer_history_path(@order.customer.id) do%>
                <%= @order.customer.last_name %><%= @order.customer.first_name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <%= form_with model: @order, local: true, url: admin_order_path(@order), method: :patch do |f| %>
              <td>
                <%= f.select :status, Order.statuses.keys.map{|k| [I18n.t("enums.order.status.#{k}"), k]},{ }, class: "form_control order_status" %>
                <%= "　　" %>
                <%= f.submit "更新", class: "btn btn-success"%>
              </td>
            <% end %>
          </tr>
          <tr>
            <th></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price.floor %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>
            <%= form_with model: order_detail, local: true, url: admin_order_detail_path(order_detail), method: :patch do |f| %>
              <td>
                <%= f.select :making_status, OrderDetail.making_statuses.keys.map{|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]}, class: "making_status" %><%= "　　" %>
                <%= f.submit "更新", class: "btn btn-success"%>
              </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3 offset-md-1" style="position: relative;">
      <div class="absolute" style="position: absolute; bottom: 0;">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th>商品合計</th>
              <td><%= @order.order_details.sum { |order_detail| order_detail.subtotal } %>円</td>
            </tr>
            <tr>
              <th>送料</th>
              <td><%= @order.shipping_fee %>円</td>
            </tr>
            <tr>
              <th>請求金額合計</th>
              <td><%= @order.total_price %>円</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>